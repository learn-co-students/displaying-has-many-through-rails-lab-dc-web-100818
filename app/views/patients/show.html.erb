<h2><%= @patient.name %></h2>
<ul>
  <% @patient.appointments.each do |appt| %>
  <ul>
    <li><%= appt.appointment_datetime.strftime("%B %d, %Y") + " at " + appt.appointment_datetime.strftime("%H:%M") %></li>
     <li><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></li>
   </ul>
   <% end %>
</ul>
