<h1><%= @doctor.name %></h1>
<br>
<br>
<h2>Department: <%= @doctor.department %></h2>
  <br>
  <br>
<h2>Appointments:</h2>
  <br>
  <br>
  <ul>
    <% @doctor.appointments.each do |appt| %>
      <li>Patient: <%= link_to appt.patient.name, patient_path(appt.patient) %> - Appointment Time: <%= appt.appointment_datetime.strftime("%B %-d, %Y at %k:%M") %></li>
    <% end %>
  </ul>
