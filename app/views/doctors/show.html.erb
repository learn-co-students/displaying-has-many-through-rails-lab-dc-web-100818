<h2><%= @doctor.name %></h2>
<h3><%= @doctor.department %></h3>
<ul>
  <% @doctor.appointments.each do |appt| %>
  <ul>
    <li><%= appt.appointment_datetime.strftime("%B %d, %Y") + " at " + appt.appointment_datetime.strftime("%H:%M") %></li>
     <li><%= link_to appt.patient.name, patient_path(appt.patient) %></li>
   </ul>
   <% end %>
</ul>
